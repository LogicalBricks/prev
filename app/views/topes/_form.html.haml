= simple_form_for(@tope) do |f|
  = f.error_notification

  .form-inputs
    = f.association :socio
    = f.association :prevision, selected: prevision_actual
    = f.input :monto
    = f.input :monto_reservado

  .form-actions
    = f.button :submit
    = link_to 'Cancelar', topes_path, class: 'btn btn-danger'
