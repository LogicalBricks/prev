= simple_form_for(@gasto) do |f|
  = f.error_notification

  .form-inputs
    .row
      .col-md-6
        %fieldset
          %legend Información del pago
          = f.association :socio
          = f.association :apartado
          = f.input :monto
          = f.input :metodo_pago, collection: Gasto.metodo_pagos.keys
          = f.input :fecha, as: :datepicker
      .col-md-6
        %fieldset
          %legend Información adicional
          = f.input :factura_xml
          = f.input :factura_pdf
          = f.input :solicitud
          = f.association :proveedor
          = f.input :descripcion
    - if @gasto.supera_monto_socio?
      .alert.alert-warning
        %p
          %b
            %i.fa.fa-warning
            &nbsp;
            ¡Alerta!
          Este gasto excede el monto total autorizado para el socio en este apartado:
          = f.input :forzar_monto, as: :boolean, wrapper: false

  .form-actions.pull-right
    = f.button :submit
    = link_to 'Cancelar', gastos_path, class: 'btn btn-danger'
