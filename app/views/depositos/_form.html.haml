= simple_form_for(@deposito) do |f|
  = f.error_notification

  .form-inputs
    = f.input :fecha, as: :datepicker
    = f.input :monto
    = f.input :descripcion
    = f.association :prevision
    = f.input :referencia
    = f.input :pago_de_comisiones_o_impuestos
    #pago-comision-o-impuestos.row
      .col-md-6
        = f.input :gastos do
          = f.select :gasto_ids, select_options_for_payable(Gasto.para_seleccionar_en_deposito(prevision_activa)), { include_blank: true }, { multiple: true, class: "form-control" }
      .col-md-6
        = f.input :comisiones do
          = f.select :comision_ids, select_options_for_payable(Comision.para_seleccionar_en_deposito(prevision_activa)), { include_blank: true }, { multiple: true, class: "form-control" }

  .form-actions
    = f.button :submit
    = link_to 'Cancelar', depositos_path, class: 'btn btn-danger'
