.col-md-3
  %h2 Estado de cuenta

.col-md-5
  = form_tag estado_cuenta_path, method: :get do
    %p
    = text_field_tag :mes, params[:mes]
    = submit_tag 'Buscar', class: 'btn btn-primary'
    = link_to 'Cancelar', estado_cuenta_path, class: 'btn btn-danger'

.col-md-4
  .form-inline
    - if estado_cuenta.por_mes?
      %h4 Saldo
      .form-group
        %label.control-label Inicio de mes
        %p.form-control-static.text-danger
          = number_to_currency estado_cuenta.saldo_a_inicio_mes
      &nbsp;
      .form-group
        %label.control-label Fin de mes
        %p.form-control-static.text-danger
          = number_to_currency estado_cuenta.saldo_a_final_mes

.row
%hr/

%table#estado_cuenta.table.table-striped.table-hover
  %thead
    %tr
      %th Fecha
      %th Descripción
      %th Método de pago
      %th Cargo
      %th Abono

  %tbody
    - estado_cuenta.each do |movimiento|
      %tr
        %td= movimiento.fecha
        %td= movimiento.descripcion
        %td= movimiento.metodo
        %td= number_to_currency movimiento.cargo
        %td= number_to_currency movimiento.abono
  %tfoot
    %tr
      %td Total
      %td
      %td
      %td= number_to_currency estado_cuenta.total_cargos
      %td= number_to_currency estado_cuenta.total_abonos

= link_to estado_cuenta_path(format: :xls), class: 'btn btn-lg btn-primary' do
  %i.fa.fa-file-excel-o
  Descargar xls
