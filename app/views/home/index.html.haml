%h1
  %i.fa.fa-heartbeat
  &nbsp;
  Panel de control

%hr

.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        Montos generales
      .panel-body.form-horizontal
        .col-md-3
          .form-group
            %label.col-sm-6.control-label
              = link_to "Monto total", @prevision
            .col-sm-6
              %p.form-control-static
                = number_to_currency @prevision.monto
        .col-md-3
          .form-group
            %label.col-sm-6.control-label
              = link_to "Monto depositado", depositos_path
            .col-sm-6
              %p.form-control-static
                = number_to_currency @prevision.monto_depositado
        .col-md-3
          .form-group
            %label.col-sm-6.control-label
              = link_to "Monto por_depositar", depositos_path
            .col-sm-6
              %p.form-control-static
                = number_to_currency @prevision.monto - @prevision.monto_depositado
        .col-md-3
          .form-group
            %label.col-sm-6.control-label
              = link_to "Monto gastado/reservado", gastos_path
            .col-sm-6
              %p.form-control-static
                = mostrar_montos monto: @prevision.monto_gastado_o_reservado, monto_limite: @prevision.monto, ocultar_limite: true
.row
  .col-md-6
    .panel.panel-default
      .panel-heading
        Montos por apartado
      .panel-body.form-horizontal
        - @prevision.apartados.includes(:gastos, :rubro).each do |apartado|
          .form-group
            %label.col-sm-6.control-label
              = link_to apartado, apartado
            .col-sm-6
              %p.form-control-static
                = number_to_currency apartado.suma_monto_gastado

  .col-md-6
    .panel.panel-default
      .panel-heading
        Montos por socio
      .panel-body.form-horizontal
        - Socio.all.each do |socio|
          .form-group
            %label.col-sm-6.control-label
              = link_to socio, socio
            .col-sm-6
              %p.form-control-static
                = mostrar_montos(monto: socio.monto_gastado_o_reservado, monto_limite: socio.monto_tope)

%hr/

= link_to estado_cuenta_path, class: 'btn btn-lg btn-primary' do
  %i.fa.fa-table
  Ver Estado de Cuenta
