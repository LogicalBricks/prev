!!! 5
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %title Prev
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .navbar-collapse.collapse
            %ul.nav.navbar-nav
              %li{ class: controller_name == 'home' ? 'active' : '' }
                = link_to root_path, class: 'navbar-brand' do
                  %i.fa.fa-heartbeat
                  &nbsp;
                  Prev
                  = prevision_activa
            - if usuario_actual
              %ul.nav.navbar-nav
                %li{ class: controller_name == 'socios' ? 'active' : '' }
                  = link_to socios_path do
                    %i.fa.fa-users
                    &nbsp;
                    Socios
                %li{ class: controller_name == 'rubros' ? 'active' : '' }
                  = link_to rubros_path do
                    %i.fa.fa-archive
                    &nbsp;
                    Rubros
                %li{ class: controller_name == 'previsiones' ? 'active' : '' }
                  = link_to previsiones_path do
                    %i.fa.fa-bank
                    &nbsp;
                    Previsiones
                %li{ class: controller_name == 'depositos' ? 'active' : '' }
                  = link_to depositos_path do
                    %i.fa.fa-check-square-o
                    &nbsp;
                    Depositos
                %li{ class: controller_name == 'gastos' ? 'active' : '' }
                  = link_to gastos_path do
                    %i.fa.fa-dollar
                    &nbsp;
                    Gastos
                %li{ class: controller_name == 'comisiones' ? 'active' : '' }
                  = link_to comisiones_path do
                    %i.fa.fa-credit-card
                    &nbsp;
                    Comisiones
                %li{ class: controller_name == 'proveedores' ? 'active' : '' }
                  = link_to proveedores_path do
                    %i.fa.fa-amazon
                    &nbsp;
                    Proveedores
              %ul.nav.navbar-nav.navbar-right
                %li
                  = link_to destroy_usuario_session_path, method: :delete, data: { confirm: "¿Desea cerrar su sesión?" } do
                    %i.fa.fa-sign-out
                    Cerrar sesión

    - if usuario_actual && prevision_activa && Prevision.count > 1
      %section#banner-prevision
        .well
          .container
            = link_to "Cambiar de previsión", prevision_activa_path, class: "btn btn-default pull-right"
            .h5
              La prevision activa es del
              %b
                = l prevision_activa.fecha_inicial, format: :long
                al
                = l prevision_activa.fecha_final, format: :long

    .container
      .row
        .col-md-12

          = yield

    %footer.footer
      .container
        %p.text-muted
          &copy; LogicalBricks
          = Date.current.year
