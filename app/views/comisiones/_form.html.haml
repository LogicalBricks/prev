= simple_form_for(@comision) do |f|
  = f.error_notification

  .form-inputs
    = f.input :monto
    = f.input :descripcion
    = f.input :fecha, as: :datepicker
    = f.association :prevision, selected: prevision_actual
    = f.input :fecha_reposicion, as: :datepicker
    = f.input :comentario

  .form-actions
    = f.button :submit
    = link_to 'Cancelar', comisiones_path, class: 'btn btn-danger'
