= simple_nested_form_for(@prevision) do |f|
  = f.error_notification

  .row.form-inputs
    .col-md-4
      = f.input :periodo
    .col-md-4
      = f.input :monto_remanente
    .col-md-4
      = f.input :monto_presupuestado

  %hr

  .row
    .col-md-6
      = render 'topes', f: f

    .col-md-6
      = render 'apartados', f: f

  .form-actions.pull-right
    = f.button :submit
    = link_to 'Cancelar', previsiones_path, class: 'btn btn-danger'
