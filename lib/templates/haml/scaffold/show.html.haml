%h2
  %i.fa
  &nbsp;
  Detalles de <%= singular_table_name.humanize %>

%hr

.form-horizontal
  <%- attributes.each do |attribute| -%>
  .form-group
    %label.col-sm-3.control-label
      <%= attribute.name.humanize %>:
    .col-sm-9
      %p.form-control-static
        = @<%= singular_table_name %>.<%= attribute.name %>
  <%- end -%>

= link_to <%= plural_table_name %>_path, class: 'btn btn-default' do
  %i.fa.fa-arrow-left
  Regresar
= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary' do
  %i.fa.fa-edit
  Modificar
